<?xml version="1.0" encoding="UTF-8"?>
<Context path="/IntershipTutor">
    <Resource 
    	name="jdbc/intershiptutor_database" 
  		auth="Container" 
  		type="javax.sql.DataSource"
        maxActive="50" 
        maxIdle="30" 
        maxWait="10000"
        username="intership" 
        password="intership"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost/intershiptutor?zeroDateTimeBehavior=convertToNull"
    />
</Context>